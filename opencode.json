{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "arxiv": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-v",
        "/home/einar/Downloads/radoc/papers:/app/papers",
        "arxiv-mcp-server:local"
      ],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "mcp-knowledge-graph",
        "--memory-path",
        "/home/einar/Documentos/codebase_state_manager_mcp/.aim"
      ],
      "enabled": true
    },
    "design-patterns": {
      "type": "local",
      "command": [
        "bun",
        "/home/einar/Documentos/design_patterns_mcp/dist/src/mcp-server.js"
      ],
      "enabled": true
    },
    "desktop-commander": {
      "type": "local",
      "command": ["bunx", "-y", "@wonderwhy-er/desktop-commander@latest"],
      "enabled": true
    },
    "taskmanager": {
      "type": "local",
      "command": ["bunx", "-y", "@kazuph/mcp-taskmanager"],
      "enabled": false
    },
    "knip": {
      "type": "local",
      "command": [
        "bun",
        "/home/einar/Documentos/knip-mcp-server/build/index.js"
      ],
      "enabled": true
    },
    "zen": {
      "type": "local",
      "command": [
        "/home/einar/Documentos/zen-mcp-server/.zen_venv/bin/python",
        "/home/einar/Documentos/zen-mcp-server/server.py"
      ],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["bunx", "shadcn@latest", "mcp"],
      "enabled": false
    },
    "radix-mcp-server": {
      "type": "local",
      "command": [
        "bunx",
        "@gianpieropuleo/radix-mcp-server@latest",
        "--github-api-key",
        "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"
      ],
      "enabled": false
    },
    "flyonui": {
      "type": "local",
      "command": ["flyonui-mcp"],
      "enabled": false
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "spotlight": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "--prefer-online",
        "@spotlightjs/spotlight@latest",
        "mcp"
      ],
      "enabled": true
    },
    "codebase-state-manager": {
      "type": "local",
      "command": [
        "uv",
        "run",
        "--project",
        "/home/einar/Documentos/codebase_state_manager_mcp",
        "python",
        "init_neo4j_and_mcp.py"
      ],
      "environment": {
        "DB_MODE": "sqlite",
        "NEO4J_ENABLED": "false",
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "password",
        "NEO4J_CONNECTION_TIMEOUT": "90",
        "LOG_LEVEL": "INFO",
        "RATE_LIMIT_ENABLED": "false",
        "AUDIT_ENABLED": "false",
        "VOLUME_PATH": "/tmp/tool"
      },
      "enabled": false
    },
    "MiniMax": {
      "type": "local",
      "command": ["uvx", "minimax-coding-plan-mcp", "-y"],
      "environment": {
        "MINIMAX_API_KEY": "{env:MINIMAX_API_KEY}",
        "MINIMAX_API_HOST": "https://api.minimax.io"
      },
      "enabled": true
    }
  }
}
